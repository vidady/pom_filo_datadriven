 <!-- Email Authentication(USername and Password) -->
 <mailuser>search4vivek007@gmail.com</mailuser>
 <mailpassword>Warpath!82</mailpassword>
 
 <receivers>
 <!-- To Email address -->
 <receiver>vivek.dubey82@hotmail.com</receiver>
 </receivers>
 
